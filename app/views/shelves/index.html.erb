<% provide(:title, 'My Shelves') %>
<div class="container">  
  <h1>My Shelves</h1>
    <div class="row">
      <% @shelves.each do |shelf| %>
        <div class="col-lg-6 col-md-6 col-xs-6">
          <div class="btn-group btn-block">
            <%= link_to shelf.name, shelf_path(shelf.id), button_type: "button", class: "btn btn-lg btn-warning col-sm-10 col-md-11" %>
              <% if signed_in? %>
              <button type="button" class="btn btn-lg btn-warning dropdown-toggle col-sm-2 col-md-1" data-toggle="dropdown" aria-expanded="false">
                <span class="caret"></span>
              </button>
              <ul class="dropdown-menu btn-block" role="menu">
                <li><%= link_to "delete this shelf", shelf, method: :delete, data: { confirm: 'Are you sure?' } %></li>
              </ul>
              <% end %>
          </div>
        </div>
      <% end %>
    </div>
</div>


