<% provide(:title, @shelf.name) %>
<div class="container">
  <h1><%= @shelf.name %></h1>
    <div class="row">
      <% @books.each do |book| %>
      <div class="col-md-3">
        <%= link_to book.title, book_path(book.id) %>
        <br>
        <%= book.author %>
        <br>
        <%= image_tag book.thumbnail %>
        <br>
        <%= link_to "delete", book, method: :delete, data: { confirm: 'Really?' }, class: 'btn btn-danger btn-xs' %>
        <br>
      </div>
      <% end %>
    </div>
</div>
